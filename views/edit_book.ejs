<% include partials/header %>

<!-- Navbar code -->
<nav class="navbar navbar-toggleable-md navbar-inverse bg-primary">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand" href="#">Book Project</a>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/books/add">Add Book</a>
      </li>
      <% if (user) { %>
        <li class="nav-item">
          <a class="nav-link" href="/users/logout">Logout</a>
        </li>
      <% } else { %>
        <li class="nav-item">
          <a class="nav-link" href="/users/register">Register</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/login">Login</a>
        </li>
      <% } %>
    </ul>
  </div>
</nav>

<!-- Main Section Elements -->
<main class='edit_book_container'>

  <!-- form elements -->
  <div class='book_info_edit'>
    <h1>Title: <%= book.title %></h1>
    <h5>Written by: <%= book.author %></h5>
    <p>Desription: <%= book.body %></p>
    <hr>
    <button><a href='/books/edit/<%= book._id %>'>Edit</a></button>
    <button><a href='#' class='delete-book' data-id='<%= book._id %>'>Delete</a></button>
  </div>

</main>

<% include partials/footer %>